= form_for @room do |f|
  - if @room.errors.any?
    #error_explanation
      %h2= "#{pluralize(@room.errors.count, "error")} prohibited this room from being saved:"
      %ul
        - @room.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :open_at
    = f.time_field :open_at
  .field
    = f.label :close_at
    = f.time_field :close_at
  .field
    = f.label :price
    = f.number_field :price
  .field
    = f.label :price_unit
    = f.select :price_unit, Room.price_units.keys.map { |k| [k, k] }

  .actions
    = f.submit 'Save'
